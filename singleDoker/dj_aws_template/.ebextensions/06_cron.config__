files:
    "/tmp/mycron.template":
        mode: "000644"
        owner: root
        group: root
        content: |
            55 11 * * * root /var/app/venv/staging-LQM1lest/bin/python3 /var/app/current/update_station_list.py
commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/mycron.bak /etc/cron.d/mycron"

container_commands:
    enable_cron:
        command: "mv /tmp/mycron.template /etc/cron.d/mycron"
        leader_only: true